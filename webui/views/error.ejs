<div class="error-container">
    <div class="error-content">
        <h1>Error</h1>
        <p class="error-message"><%= message %></p>
        <% if (error && error.stack) { %>
        <pre class="error-stack"><%= error.stack %></pre>
        <% } %>
        <a href="/" class="btn btn-primary">Go Home</a>
    </div>
</div>
