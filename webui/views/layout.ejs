    <script>
        // API Security - token and secure fetch wrapper
        window.POOL_API_TOKEN = '<%= typeof apiToken !== "undefined" ? apiToken : "" %>';

        // Secure fetch wrapper that includes required headers
        window.secureFetch = async function(url, options = {}) {
            const headers = {
                'X-Pool-Request': 'internal',
                'X-Pool-Token': window.POOL_API_TOKEN,
                ...(options.headers || {})
            };
            return fetch(url, { ...options, headers });
        };
    </script>
    <script src="/js/main.js"></script>
    <script>
        // Load blocks found for navbar
        async function loadNavBlocksFound() {
            try {
                const res = await secureFetch('/api/pool');
                const data = await res.json();
                if (data.success && data.data) {
                    const el = document.querySelector('#nav-blocks-found .nav-stat-value');
                    if (el) el.textContent = data.data.blocksFound || 0;
                }
            } catch (err) {
                console.error('Failed to load blocks found:', err);
            }
        }
        document.addEventListener('DOMContentLoaded', loadNavBlocksFound);
        setInterval(loadNavBlocksFound, 30000);
    </script>
